<h6>Dashboard</h6>
<h3>Welcome, {{name}} <i class="fas fa-pen"></i> </h3>
<p>Here are your story that you shared</p>

{{#if stories}}
    <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            {{#each stories}}
                <tr>
                    <td><a href="/stories/{{_id}}">{{title}}</a></td>
                    <td>{{formatDate createdOn "Do MMMM  YYYY, h:mm:ss a"}}</td>
                    <td><span class="dash-status">{{status}}</span></td>
                    <td>Delete</td>
                </tr>
            {{/each}}
        </tbody>
    </table>

{{else}}
<h5 class="red">You have not created any stories</h5>

{{/if}}
